@model CategoryDTO

<form method="post" asp-action="Delete">
    <input hidden value="@Model.Id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-primary pl-3">Delete Category</h2>
        </div>
        <div class="row">
            <div class="col-8 ">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 py-2">
                        <input disabled asp-for="Name" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="bi bi-box-arrow-in-left"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>