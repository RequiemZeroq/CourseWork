@model ProductDTO

<form method="post" asp-action="Delete">
    <input hidden asp-for="Id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-primary pl-3">Product Details</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 py-2">
                        <input disabled asp-for="Name" class="form-control" />
                    </div>

                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8  py-2">
                        <input disabled asp-for="Price" class="form-control" />
                    </div>

                    <div class="col-4">
                        <label disabled asp-for="Description"></label>
                    </div>
                    <div class="col-8  py-2">
                        <textarea disabled asp-for="Description" class="form-control summernote"></textarea>
                    </div>

                    <div class="col-4">
                        <label asp-for="Rate"></label>
                    </div>
                    <div class="col-8 py-2">
                        <input disabled asp-for="Rate" class="form-control" />
                    </div>

                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8 py-2">
                        <input disabled asp-for="Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row text-center">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="bi bi-box-arrow-in-left"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                toolbar: false, 
                airMode: true, 
            });

            $('.summernote').summernote('disable');
        });
    </script>
}